{
  "name": "@eric.dahlseng/linter-configuration",
  "version": "0.1.2",
  "description": "Linter Configuration",
  "bin": "./dist/index.js",
  "dependencies": {
    "@eric.dahlseng/cli-tools": "^0.1.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "fluture": "^10.2.0",
    "prettier": "^1.14.3",
    "ramda": "^0.25.0",
    "stylelint": "^9.7.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^1.0.0",
    "stylelint-processor-styled-components": "^1.5.0",
    "write-pkg": "^3.2.0"
  },
  "author": "Eric Dahlseng",
  "repository": {
    "type": "git",
    "url": "https://github.com/eric.dahlseng/linter-configuration.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "babel sources --out-dir dist --copy-files --source-maps inline",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "flow": "flow",
    "lint": "npm run lint:js; npm run lint:json",
    "lint:js": "eslint ./",
    "lint:json": "prettier --config .prettierrc.js --list-different '**/*.json'",
    "lint-report:js": "eslint ./ --output-file ./linting-results/eslint/report.xml --format junit",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "flow-bin": "^0.85.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-flow"
    ],
    "plugins": [
      "@babel/plugin-transform-modules-commonjs"
    ]
  }
}
